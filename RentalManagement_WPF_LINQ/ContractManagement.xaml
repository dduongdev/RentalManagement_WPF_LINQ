<Window x:Class="RentalManagement_WPF_LINQ.ContractManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RentalManagement_WPF_LINQ"
        mc:Ignorable="d"
        Title="ContractManagement" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Danh sách hợp đồng có doanh thu cao nhất">
            <DataGrid Name="dgHighestRevenueContracts"/>
        </GroupBox>

        <GroupBox Grid.Row="1" Header="Danh sách hợp đồng">
            <DataGrid Name="dgContracts"/>
        </GroupBox>
    </Grid>
</Window>
